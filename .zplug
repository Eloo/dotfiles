#
# Global Antigen configuration
#

#
# Load various lib files
#
echo "Load zplug"
#antigen use oh-my-zsh

#
# Antigen Bundles
#

zplug "plugins/git",   from:oh-my-zsh
zplug "zsh-users/zsh-syntax-highlighting"
zplug "rupa/z", use:z.sh
# zplug "pip"
zplug "nobeans/zsh-sdkman"
zplug "zsh-users/zsh-completions", depth:1
# zplug "extract"
# zplug "sublime"
#antigen bundle vagrant"

export HISTFILE=~/.zsh_history
export HISTSIZE=10000
export SAVEHIST=10000

#
# Antigen theme
#

#POWERLEVEL9K_MODE='awesome-patched'
POWERLEVEL9K_OS_ICON_BACKGROUND="white"
POWERLEVEL9K_OS_ICON_FOREGROUND="blue"
POWERLEVEL9K_VCS_STAGED_ICON='\u00b1'
POWERLEVEL9K_VCS_UNTRACKED_ICON='\u25CF'
POWERLEVEL9K_VCS_UNSTAGED_ICON='\u00b1'
POWERLEVEL9K_VCS_INCOMING_CHANGES_ICON='\u2193'
POWERLEVEL9K_VCS_OUTGOING_CHANGES_ICON='\u2191'
POWERLEVEL9K_VCS_MODIFIED_BACKGROUND='yellow'
POWERLEVEL9K_VCS_UNTRACKED_BACKGROUND='cyan'
POWERLEVEL9K_LEFT_PROMPT_ELEMENTS=(status os_icon context dir dir_writable vcs)
POWERLEVEL9K_RIGHT_PROMPT_ELEMENTS=(time)
POWERLEVEL9K_STATUS_VERBOSE=false
#POWERLEVEL9K_SHORTEN_STRATEGY="truncate_left"
POWERLEVEL9K_SHORTEN_DIR_LENGTH=2

POWERLEVEL9K_TIME_FORMAT="%D{%H:%M} \uE12E"


zplug 'bhilburn/powerlevel9k', as:theme

#antigen theme wesbos/Cobalt2-iterm cobalt2.zsh-theme

# Install plugins if there are plugins that have not been installed
if ! zplug check --verbose; then
    printf "Install? [y/N]: "
    if read -q; then
        echo; zplug install
    fi
fi

# Then, source plugins and add commands to $PATH
zplug load