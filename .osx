# OS X Antigen configuration

#
# Exports
#
export JAVA_HOME=$(/usr/libexec/java_home)


#
# Antigen bundles
#

antigen bundle brew
antigen bundle gem
antigen bundle osx

# Full brew update
alias brew_update="brew -v update; brew upgrade --force-bottle --cleanup; brew cleanup; brew cask cleanup; brew prune; brew doctor"

#
# OS X aliases
#

alias ll='ls -alhG'
alias ports='lsof -nPl -iTCP -sTCP:LISTEN'

#
# OS X functions
#

function localip(){
	ifconfig | grep "inet " | grep -Fv 127.0.0.1 | awk '{print $2}'
}

# Kills the process behind the passed port number
function killp(){
 lsof -nPl -iTCP -sTCP:LISTEN | grep $1 | awk '{print $2}' | xargs kill -9
}

# Update all casks
caskup() {
  rm -rf "$(brew --cache)"
  brew update
  brew cask uninstall --force "$@"
  brew cask install "$@"
}
