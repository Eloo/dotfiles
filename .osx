# OS X Antigen configuration

#
# Exports
#
export JAVA_HOME=$(/usr/libexec/java_home)


#
# Antigen bundles
#

antigen bundle brew
antigen bundle cask
antigen bundle gem
antigen bundle osx

# Full brew update
alias brew_update="brew -v update; brew upgrade --force-bottle --cleanup; brew cleanup; brew cask cleanup; brew prune; brew doctor"

#
# OS X aliases
#

alias ll='ls -alhG'
